<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:onClick="progressHelpOverlay">

    <FrameLayout
        android:id="@+id/help_overlay_obfuscator_S"
        android:layout_toStartOf="@+id/help_overlay_display_container"
        android:layout_alignParentStart="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/helpOverlayBackground"/>

    <FrameLayout
        android:id="@+id/help_overlay_obfuscator_E"
        android:layout_toEndOf="@+id/help_overlay_display_container"
        android:layout_alignParentEnd="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/helpOverlayBackground"/>

    <FrameLayout
        android:id="@+id/help_overlay_obfuscator_BC"
        android:layout_below="@+id/help_overlay_display_container"
        android:layout_alignEnd="@+id/help_overlay_display_container"
        android:layout_alignStart="@+id/help_overlay_display_container"
        android:layout_alignParentBottom="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/helpOverlayBackground"/>

    <FrameLayout
        android:id="@+id/help_overlay_obfuscator_TC"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/help_overlay_display_container"
        android:layout_alignEnd="@+id/help_overlay_display_container"
        android:layout_alignStart="@+id/help_overlay_display_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/helpOverlayBackground"/>

    <FrameLayout
        android:id="@+id/help_overlay_display_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@color/helpOverlayHighlightSemiTR"/>

    <TextView
        android:id="@+id/help_overlay_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/defaultHelpOverlayLabelBGColor"
        android:text=""
        android:layout_alignParentStart="true" />

</RelativeLayout>